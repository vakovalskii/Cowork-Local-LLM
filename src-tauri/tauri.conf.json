{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LocalDesk",
  "version": "0.0.7",
  "identifier": "com.vakovalskii.localdesk",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist-react"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LocalDesk",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}